<!DOCTYPE>
<html>
<head>
  <title>Wibble Compound Graph</title>
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1">
  <script src="https://unpkg.com/cytoscape/dist/cytoscape.min.js"></script>
  <script src="https://unpkg.com/webcola/WebCola/cola.min.js"></script>
  <script src="https://unpkg.com/cytoscape-cola/cytoscape-cola.js"></script>
  <style>
    body {
      font-family: helvetica;
      font-size: 14px;
    }

    #cy {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      z-index: 999;
    }
  </style>

  <script>
  document.addEventListener("DOMContentLoaded", function () {
    var cy = (window.cy = cytoscape({
      container: document.getElementById("cy"),
      layout: {
        name: "cola",
        animate: false,
        padding: 100,
        fit: true,
        nodeDimensionsIncludeLabels: true,
        randomize: true,
        nodeSpacing: function( node ){ return 50; },
        flow: { axis: 'x', minSeparation: 256 }
      },
      style: fetch('cy-style.json').then(function(res){ return res.json(); }),
      elements: fetch('<?=fileName?>').then(function(res){ return res.json(); }),

    }));
  });

  </script>
</head>
<body style="background: #002b36;">
  <div id="cy"></div>
</body>
</html>
